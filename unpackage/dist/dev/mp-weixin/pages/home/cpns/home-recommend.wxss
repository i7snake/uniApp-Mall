.recommend {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 20rpx;
}
.recommend .recommend-item {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}
.recommend .recommend-item .image {
  width: 150rpx;
  height: 150rpx;
}
.recommend .recommend-item .title {
  margin-top: 10rpx;
}